<Window x:Class="Tournoi.InfoPlayer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tournoi"
        mc:Ignorable="d"
        Title="InfoPlayer" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="searchPayerTextBox" HorizontalAlignment="Left" Height="20" Margin="209,162,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="217" TextChanged="searchPayerTextBox_TextChanged"/>
        <Button x:Name="searchPayerButton" Content="Search" HorizontalAlignment="Left" Margin="452,162,0,0" VerticalAlignment="Top" Width="74" Click="searchPayerButton_Click"/>
        <DataGrid x:Name="searchPlayerDataGrid" HorizontalAlignment="Left" Height="127" Margin="209,206,0,0" VerticalAlignment="Top" Width="317"/>
        <Button x:Name="backButtonInfoPlayer" Content="Back" HorizontalAlignment="Left" Margin="691,355,0,0" VerticalAlignment="Top" Width="75" Click="backButtonInfoPlayer_Click"/>
        <Label Content="Search a player" HorizontalAlignment="Left" Margin="209,131,0,0" VerticalAlignment="Top" Width="90" RenderTransformOrigin="0.169,0.621"/>

    </Grid>
</Window>
